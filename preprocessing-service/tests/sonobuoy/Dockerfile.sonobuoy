FROM python:3.7.0

ENV WORKSPACE /src
WORKDIR $WORKSPACE
ENV NATS_SERVER_URL=nats://cluster-nats-client.opni.svc.cluster.local:4222
ENV NKEY_SEED_FILENAME=var/nats/nats-secrets

RUN pip install --upgrade pip

COPY ["/preprocessing-service/tests/integration/requirements.txt", "$WORKSPACE/preprocessing-service/tests/integration/requirements.txt"]

RUN cd $WORKSPACE && \
    pip install -r preprocessing-service/tests/integration/requirements.txt

COPY [".", "$WORKSPACE"]

RUN cd $WORKSPACE && ls && \
    chmod +x ./preprocessing-service/tests/integration/run_sono.sh

ENTRYPOINT ["./preprocessing-service/tests/integration/run_sono.sh"]